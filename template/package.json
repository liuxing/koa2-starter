{
  "name": "<%-name%>",
  "version": "1.0.0",
  "description": "<%-description%>",
  "main": "app.js",
  "scripts": {
    "dev": "nodemon app.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "commit": "git cz"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "author": "<%-author%>",
  "dependencies": {
    "koa": "^2.5.1",
    "koa-body": "^4.0.4",
    "koa-logger": "^3.2.0",
    "koa-onerror": "^4.0.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    <%_ if (view === 'nunjucks') { _%>
    "nunjucks": "^3.1.3",
    <%_ } else if (view === 'pug') { _%>
    "pug": "^2.0.3",
    <%_ } else { _%>
    "ejs": "^2.6.1",
    <%_ } _%>
    "koa-views": "^6.1.4"
  },
  "devDependencies": {
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.0.1",
    <%_ if (lintConfig === 'standard') { _%>
    "eslint-config-standard": "^11.0.0",
    <%_ } else if (lintConfig === 'airbnb') { _%>
    "eslint-config-airbnb": "^17.0.0",
    <%_ } _%>
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^1.0.0-rc.9",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.17.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
